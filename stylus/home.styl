$body-bg          = #f9f9f9
$text-color       = #423501
$link-color       = #4374B9
$link-hover-color = $link-color

// Turn off lg-desktop
$container-lg-desktop = $container-desktop

@import 'variables'
@import 'mixins'
@import 'normalize'
@import 'scaffolding'
@import 'grid'
@import 'type'

@import 'components/icomoon'
@import 'components/pulse'


// Typekit
.wf-loading
  visibility: hidden
.wf-active, .wf-inactive
  visibility: visible


.tk-museo-slab
  text-shadow: 0 1px 1px rgba(0,0,0,.15)

header
  padding: 30px 0

  .icon-heart
    display: inline-block
    font-size: 125%
    color: #EF4136
    rotate(15deg)
    &:hover
      -webkit-animation: rotatedPulse .8s
      animation: rotatedPulse .8s
      -webkit-animation-iteration-count: 3
      animation-iteration-count: 3

a
  font-weight: bold


.social
  li
    display: inline-block
  a
    display: block
    text-decoration: none
    &:hover
      -webkit-animation: pulse .3s
      animation: pulse .3s
  .icon
    font-size: 48px
    margin-right: 20px
  .text
    position: absolute
    left: -999em



@media $media-max-phone
  header h1
    font-size: 30px


@media $media-min-tablet
  header h1
    font-size: 48px
  p
    font-size: 16px


@media $media-min-desktop
  header h1
    font-size: 60px
